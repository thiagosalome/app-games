<?xml version="1.0" enconding="utf-8"?>
<resources>
	<style name="Theme.Init" parent="@style/Theme.AppCompat.Light.DarkActionBar">
		<item name="colorPrimary">@color/PrimaryColor</item>
		<item name="colorPrimaryDark">@color/PrimaryDarkColor</item>
		<item name="actionBarStyle">@style/MyActionBar</item>
	</style>
	
	<style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
		<item name="background">@color/PrimaryColor</item>
		<item name="elevation">0dp</item>
	</style>
	
	<style name="MyProgressIndicator" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
		<item name="colorAccent">@color/PrimaryColor</item>
		<item name="android:textColorPrimary">#ffffff</item>
		<item name="android:background">#ffffff</item>
	</style>
	
	<color name="PrimaryColor">#43a047</color>
	<color name="PrimaryDarkColor">#00701a</color>
</resources>